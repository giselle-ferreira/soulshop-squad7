<section class="m-1">
  <a href="/cupons/adicionar" class="btn btn-dark">
    <i class="bi bi-plus"></i>
    Adicionar Cupom
  </a>
  <hr />
  <form method="GET">
    <input
      type="string"
      name="codigoCupom"
      placeholder="Busque pelo código"
      class="form-control form-control-sm"
      value="{{codigoCupom}}"
    />
    <button class="btn btn-sm btn-dark mt-1">
      <i class="bi bi-search"></i>
      Buscar
    </button>
  </form>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <th>Código</th>
        <th>Desconto</th>
        <th>Cashback</th>
        <th>Validade</th>
        <th>Descrição</th>
      </thead>
      <tbody>
        {{#each cupons}}
          <tr>
            <td>{{this.code}}</td>
            <td>{{this.discount}}</td>
            <td>{{this.cashback}}</td>
            <td>{{this.validity}}</td>
            <td>{{this.description}}</td>
            <td>
              <div class="d-flex">
                <div>
                  <a
                    href="/cupons/editar/{{this._id}}"
                    class="btn btn-sm btn-warning mx-1"
                  >
                    <i class="bi bi-pencil"></i>
                  </a>
                </div>
                <div>
                  <form action="/cupons/delete" method="POST">
                    <input
                      name="id"
                      type="hidden"
                      value="{{this._id}}"
                    />
                    <button class="btn btn-sm btn-danger">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </div>
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>