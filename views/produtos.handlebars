<section class="m-1">
  <div class="d-flex justify-content-end">
    <a href="/produtos/novo" class="btn btn-adicionar ">
      <i class="bi bi-plus"></i>
      Criar produto
    </a>
  </div>
  <hr />

  <div>
    <form method="GET" class="d-flex justify-content-end" >
      <div class="me-2 col-6">
        <input
          type="text"
          name="nomeProduto"
          placeholder="Nome do produto"
          class="form-control form-control-sm"
          value="{{nomeProduto}}"
        />
      </div>
      <div>
        <button class="btn btn-sm btn-dark">
          <i class="bi bi-search"></i>
          Buscar
        </button>
      </div>
    </form>
  </div>
</section>

  <div class="table-responsive">
    <table class="table">
      <thead>
        <th>Nome</th>
        <th>Preço</th>
        <th>Descrição</th>
        <th>Quantidade</th>
        <th>Ações</th>
      </thead>
      <tbody>
        {{#each produtos}}
          <tr>
            <td>{{this.name}}</td>
            <td>{{this.price}}</td>
            <td>{{this.description}}</td>
            <td>{{this.quantity}}</td>
            <td>
              <div class="d-flex">
                <div>
                  <a
                    href="/produtos/editar/{{this._id}}"
                    class="btn btn-sm btn-warning mx-1"
                  >
                    <i class="bi bi-pencil"></i>
                  </a>
                </div>
                <div>
                  <form action="/produtos/deletar" method="POST">
                    <input
                      name="id"
                      type="hidden"
                      value="{{this._id}}"
                    />
                    <button class="btn btn-sm btn-danger">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </div>
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>